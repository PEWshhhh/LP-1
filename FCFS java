package something;

import java.util.Scanner;

public class FCFS {
	public static void main(String[] args) {
		
		System.out.println("Enter number of processes:");
		Scanner in = new Scanner(System.in);
		int totalprocess = in.nextInt();
		
		int pid[] = new int [totalprocess];
		int ar[] = new int [totalprocess];
		int bt[] = new int [totalprocess];
		int ct[] = new int [totalprocess];
		int tat[] = new int [totalprocess];
		int wt[] = new int [totalprocess];
		
		for(int i=0; i < totalprocess; i++) {
			System.out.println("Enter process" + (i+1) + "Arival Time");
			ar[i] = in.nextInt();
			System.out.println("Enter process" + (i+1) + "Burst Time");
			bt[i] = in.nextInt();
			pid[i]=i+1;
		}
		
		int temp;
		int temp1;
		int temp2;
		for (int j=0; j< totalprocess; j++) {
			for( int k=0; k< totalprocess; k++) {
				
				if(ar[j] < ar[k]) {
					temp = ar[j];
					ar[j]=ar[k];
					ar[k]=temp;
					
					temp1 = bt[j];
					bt[j]=bt[k];
					bt[k]=temp1;
					
					temp2 = pid[j];
					pid[j]=pid[k];
					pid[k]=temp2;
				}
			}
		}
		
		ct[0] = ar[0] + bt[0];
		for (int l=1; l< totalprocess; l++) {
			ct[l]=ct[l-1]+bt[l];	
		}
		
		for(int m=0; m< totalprocess; m++) {
			tat[m]= ct[m] - ar[m]; 
			wt[m]= tat[m] - bt[m];
		}
		
		System.out.println("Process\t\tAT\t\tBT\t\tCT\t\tTAT\t\tWT");
		for(int n=0; n< totalprocess; n++) {
			System.out.println(pid[n] + "\t\t\t" + ar[n] + "\t\t"+ bt[n] + "\t\t"+ ct[n] + "\t\t"+ tat[n]+ "\t\t"+ wt[n]);
		}
		
		System.out.println("Gantt chart:");
		for(int o=0; o<totalprocess; o++) {
			System.out.println("P" + pid[o] + " ");
			
		}
	}

}




//FCFS (First Come First Serve) is the simplest CPU scheduling algorithm.
//In this method, the process that arrives first in the ready queue is executed first.
//It follows the FIFO (First In, First Out) principle â€” just like a queue in a bank or ticket counter.
//
//ðŸ”¹ Working:
//
//The CPU is allocated to the process that requests it first.
//
//Once a process starts execution, it runs until completion (non-preemptive).
//
//After completion, the next process in the queue gets the CPU.
//
//ðŸ”¹ Characteristics:
//
//Scheduling type: Non-preemptive
//
//Basis: Arrival time
//
//Queue: FIFO (First In First Out)
//
//Implementation: Usually done using a simple ready queue.
//
//
//ðŸ”¹ Advantages:
//
//âœ… Simple to understand and implement
//âœ… Works well when all processes have similar burst times
//
//ðŸ”¹ Disadvantages:
//
//âŒ Leads to Convoy Effect â€” a long process can delay all others
//âŒ Poor utilization of CPU
//âŒ Not suitable for time-sharing systems
